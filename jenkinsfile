/**Declarative pipeline exmaple**/
pipeline{
    agent{
        lable 'MAVEN'
    }
    stages{
        stage('SCM'){
             git url: 'https://github.com/VenkateshYembuluru/gameoflifeNew.git', branch: 'master'
        }
        stage('BUILD'){
            sh script: 'mvn clean package', label: 'build'
        }
        stage('rchive the artifacts'){
           archiveArtifacts  archive: 'gameoflife-web/target/*.war', onlyIfSuccessful: true
        }
    }

}