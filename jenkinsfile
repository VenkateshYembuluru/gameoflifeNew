/**Declarative pipeline exmaple**/
pipeline{
    agent{
            label 'MAVEN'
        }
    stages{
        stage('SCM'){
            steps{
                git url: 'https://github.com/VenkateshYembuluru/gameoflifeNew.git', branch: 'master'
            }
        }
        stage('BUILD'){
            steps{
                sh script: 'mvn clean package', label: 'build'
            }
        }
        stage('rchive the artifacts'){
            steps{
                archiveArtifacts  artifacts: 'gameoflife-web/target/*.war', onlyIfSuccessful: true
            }
        }
    }
    parameters {
        string(name: 'learning' )
    }
    stages {
        stage('test') {
            steps {
                echo '${params.learning} is the parameter'
            }
        }
    }
}